{% set surround = datas.surround %}
{% set s7 = surround.s7 %}
{% set s8 = surround.s8 %}
{% set s9 = surround.s9 %}
{% set s4 = surround.s4 %}
{% set s5 = surround.s5 %}
{% set s6 = surround.s6 %}
<div class="planet-layout">
  <div class="planet-grid">
    <div class="surround {{ s7.kind or 'none' }}">{{ s7.content }}</div>
    <div class="surround {{ s8.kind or 'none' }}">{{ s8.content }}</div>
    <div class="surround {{ s9.kind or 'none' }}">{{ s9.content }}</div>
    <div class="surround {{ s4.kind or 'none' }}">{{ s4.content }}</div>
    <div class="here">
      {% if s5 %}
        {% include "here/" ~ s5.kind ~ ".jinja" %}
      {% else %}
        {% include "here/none.jinja" %}
      {% endif %}
    </div>
    <div class="surround {{ s6.kind or 'none' }}">{{ s6.content }}</div>
  </div>
  <form class="planet-commond flex-row" method="post" action="/">
    <button type="submit" name="action" value="turn_left">左を向く</button>
    <button type="submit" name="action" value="to_front">
      {% if s8.kind == 'user' %}
        {{ s8.content }}
      {% else %}
        歩く
      {% endif %}
    </button>
    <button type="submit" name="action" value="turn_right">右を向く</button>
  </form>
</div>
