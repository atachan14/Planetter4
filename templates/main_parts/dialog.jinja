<div class="dialog-backdrop">
    <div class="dialog-box">
        <p>{{ pops.dialog.text }}</p>
        <form method="post" action="/">
            {% for o in pops.dialog.options %}
                <button type="submit" name="action" value="{{ o.action }}">{{ o.label }}</button>
            {% endfor %}
        </form>
    </div>
</div>
